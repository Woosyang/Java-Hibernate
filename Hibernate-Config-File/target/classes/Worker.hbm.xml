<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.hibernate.entity">
	<class name="Worker" table="Job">
		<id name="id" type="java.lang.Integer">
			<column name="ID"/> 
			<generator class="native" />
		</id>
		<property name="name" type="java.lang.String" column="Name"></property>
		<!-- use the <component/> to map the domain model of the Worker  -->
		<!-- Pay is an entity, can not use <property> to map -->
		<!-- the fields inside Pay also needs to be mapped, if they are fields, use <property> to map with -->
		<component name="pay" class="Pay">
		    <parent name="worker"></parent>
			<property name="pname" column="P_name" type="string"></property>
			<property name="amount" column="Amount" type="integer"></property>
		</component>
	</class>
</hibernate-mapping>